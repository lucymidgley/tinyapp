        <h7>
        <% if(username){ %>
          <form method="POST" action="/logout" ><h7 style="margin-right:10px">You're logged in as <%=username%>!</h7><button type="submit" class="btn btn-outline-dark"  >Logout</button></form>
        <% } else{ %>  
          <form class="d-flex align-content-end" action="/login"  method="POST">
            <input class="form-control align-items-right" type="text" name="username" placeholder="username" style="width: 200px; float: right">
            <button type="submit" class="btn btn-outline-dark" style="margin-left:5px; float: right">Submit</button>
        </form>
       <% } %>
